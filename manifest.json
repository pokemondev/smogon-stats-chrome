{
  "manifest_version": 2,
  "name": "Smogon Stats",
  "version": "1.0",
  "description": "Chrome Extension to help Pokemon Showdown players with Smogon usage statistics",
  "permissions": [
    
  ],
  
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "src/img/logo16.png",
      "32": "src/img/logo32.png",
      "48": "src/img/logo48.png",
      "64": "src/img/logo64.png",
      "128": "src/img/logo128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://play.pokemonshowdown.com/*"
      ],
      "js": [
        "build/showdownExtensions.js",
        "src/js/jquery-3.5.1.min.js"
      ]
    }
  ],
  
  "background": {
    "scripts": [
      "build/background.js"
    ],
    "persistent": false
  },
  
  "icons": {
    "16": "src/img/logo16.png",
    "32": "src/img/logo32.png",
    "48": "src/img/logo48.png",
    "64": "src/img/logo64.png",
    "128": "src/img/logo128.png"
  }
}